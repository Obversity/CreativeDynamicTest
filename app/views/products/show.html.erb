<div class="page-header">
  <h1><%= @product.product_name %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Price:</dt>
  <dd><%= number_to_currency @product.price %></dd>
  <dt>Category:</dt>
  <dd><%= link_to @product.category.category_name, {controller: "products", category: @product.category.category_name} %></dd>
</dl>
